<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>com.forexware.fip.backend</groupId>
    <artifactId>fipcore</artifactId>
    <version>3.7.12.65771-rc</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.forexware.fip.backend.fipcore</groupId>
  <artifactId>fipclient</artifactId>
  <packaging>jar</packaging>
  <name>${project.groupId}:${project.artifactId}</name>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <includes>
            <include>com/forexware/utils/**</include>
            <include>com/forexware/connector/**</include>
            <include>fip/utils/**</include>
            <include>**/common/**</include>
            <include>fip/bparties/commonlogic/**</include>
            <include>**/ejb/**</include>
          </includes>
        </configuration>
        <executions>
          <execution>
            <id>full</id>
            <goals>
              <goal>jar</goal>
            </goals>
            <phase>package</phase>
            <configuration>
              <finalName>${project.artifactId}-${project.version}-full</finalName>
              <includes>
                <include>**/*</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.build.directory}/${project.artifactId}-${project.version}-full.jar</file>
                  <type>jar</type>
                  <classifier>full</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.forexware.fip.backend.fipcore</groupId>
      <artifactId>fiputils</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

</project>
